                if(player.getHeldItemMainhand().getItem() == ItemInit.ENDER_PEARL_DUST) {
                    if(event.getTarget() instanceof Entity) {
                        if (!event.getWorld().isRemote) {
                            
                            Entity entityLiving = (Entity) event.getTarget();
                            Random rand = new Random();
                            double d0 = entityLiving.posX;
                            double d1 = entityLiving.posY;
                            double d2 = entityLiving.posZ;

                            for (int i = 0; i < 16; ++i) {
                                double d3 = entityLiving.posX + (rand.nextDouble() - 0.5D) * 32.0D;
                                double d4 = MathHelper.clamp(entityLiving.posY + (double)(rand.nextInt(16) - 8), 0.0D, (double)(event.getWorld().getActualHeight() - 1));
                                double d5 = entityLiving.posZ + (rand.nextDouble() - 0.5D) * 32.0D;


                                if (((EntityLivingBase) entityLiving).attemptTeleport(d3, d4, d5)) {
                                    event.getWorld().playSound((EntityPlayer)null, d0, d1, d2, SoundEvents.ITEM_CHORUS_FRUIT_TELEPORT, SoundCategory.PLAYERS, 1.0F, 1.0F);
                                    entityLiving.playSound(SoundEvents.ITEM_CHORUS_FRUIT_TELEPORT, 1.0F, 1.0F);
                                    player.getHeldItemMainhand().shrink(1);
                                    break;
                                }
                            }
                        }
                    }
                }